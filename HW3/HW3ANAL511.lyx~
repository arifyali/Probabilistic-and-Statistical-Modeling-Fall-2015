\begin_layout Section*
Exercise 21
\end_layout

\begin_layout Standard
\begin_inset Formula $P(X_{1}=1)=P(X_{1}=1|X_{0}=1)=0.6$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $P(X_{1}=0)=P(X_{1}=0|X_{0}=1)=0.4$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(X_{2}=1)=P(X_{2}=1|X_{1}=1)*P(X_{1}=1)+P(X_{2}=1|X_{1}=0)*P(X_{1}=0)=0.6*.0.6+0.2*0.4=0.44$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(X_{2}=0)=P(X_{2}=0|X_{1}=1)*P(X_{1}=1)+P(X_{2}=0|X_{1}=0)*P(X_{1}=0)=0.4*0.6+0.8*0.4=0.56$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(X_{3}=1)=P(X_{3}=1|X_{2}=1)*P(X_{2}=1)+P(X_{3}=1|X_{2}=0)*P(X_{2}=0)=0.6*0.44+0.2*0.6=0.376$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(X_{3}=0)=P(X_{3}=0|X_{2}=1)*P(X_{2}=1)+P(X_{3}=0|X_{2}=0)*P(X_{2}=0)=0.4*0.44+0.8*0.56=0.624$
\end_inset


\end_layout

\begin_layout Section*
Exercise 23
\end_layout

\begin_layout Subsection*
Part A
\end_layout

\begin_layout Standard
\begin_inset Formula $CDF(x)=1-e^{-\lambda x}$
\end_inset


\end_layout

\begin_layout Subsection*
Part B
\end_layout

\begin_layout Standard
\begin_inset Formula $P(X>A)=1-P(X\leq A)=1-(1-e^{-\lambda A})-(1-1)=e^{-\lambda A}$
\end_inset


\end_layout

\begin_layout Subsection*
Part C
\end_layout

\begin_layout Standard
if 
\begin_inset Formula $A<z$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(X>z\;\&\; X>A)=P(X>z)=1-P(X\leq z)=e^{-\lambda z}$
\end_inset


\end_layout

\begin_layout Standard
if 
\begin_inset Formula $z\leq A$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(X>z\;\&\; X>A)=P(X>A)=1-P(X\leq A)=e^{-\lambda A}$
\end_inset


\end_layout

\begin_layout Subsection*
Part D
\end_layout

\begin_layout Standard
\begin_inset Formula $P(X>z|X>A)=\frac{P(X>z\; and\; X>A)}{P(X>A)}$
\end_inset


\end_layout

\begin_layout Standard
if 
\begin_inset Formula $A<z$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(X>z|X>A)=\frac{e^{-\lambda z}}{e^{-\lambda A}}=e^{-\lambda(z-A)}$
\end_inset


\end_layout

\begin_layout Standard
if 
\begin_inset Formula $z\leq A$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(X>z|X>A)=\frac{e^{-\lambda A}}{e^{-\lambda A}}=1$
\end_inset


\end_layout

\begin_layout Subsection*
Part E
\end_layout

\begin_layout Standard
let 
\begin_inset Formula $z=y+A$
\end_inset


\end_layout

\begin_layout Standard
if 
\begin_inset Formula $A<z\Longrightarrow A<y+4$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(X>z|X>A)=P(X>y+A|X>A)=\frac{e^{-\lambda(y+A)}}{e^{-\lambda A}}=e^{-\lambda(y+A-A)}=e^{-\lambda y}=1-P(Y\leq y)=P(Y>y)$
\end_inset


\end_layout

\begin_layout Standard
if 
\begin_inset Formula $y+A\leq A$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $P(X>z|X>A)=\frac{e^{-\lambda A}}{e^{-\lambda A}}=1$
\end_inset


\end_layout

\begin_layout Subsection*
Part F
\end_layout

\begin_layout Standard
From Part E we know that 
\begin_inset Formula $e^{-\lambda y}=1-P(Y\leq y)\Longrightarrow P(Y\leq y)=1-e^{-\lambda y}$
\end_inset


\end_layout

\begin_layout Standard
This is the same as the CDF of X 
\end_layout

